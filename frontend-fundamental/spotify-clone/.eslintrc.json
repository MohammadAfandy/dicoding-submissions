{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single", {
       "avoidEscape": true,
       "allowTemplateLiterals": true
      }
    ],
    "no-trailing-spaces": "error",
    "no-multiple-empty-lines": ["error", {
      "max": 2,
      "maxEOF": 0
    }],
    "semi": ["error", "always"]
  }
}
